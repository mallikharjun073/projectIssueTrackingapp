<div class="card text-white bg-primary mb-3" style="max-width: 100rem;">
    <div class="card-header bg-primary font-weight-bold">Project Name : <%= result[0]?.project_name %></div>
    <div class="card-body">
      
      <p class="card-text">Author : <%= result[0]?.project_author %></p>
      <p class="card-text">Description : <%= result[0]?.project_desc %></p>
    </div>
</div>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex">
                        <h6 class="m-0 font-weight-bold text-primary"><%= result[0]?.project_name %> Project Issues</h6>
                        <button class="btn btn-primary ml-auto" type="button" data-toggle="modal" data-target="#addIssueModal">Add Issue</button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                           
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Issue Title</th>
                                        <th>Description</th>
                                        <th>Labels</th>
                                        <th>Author</th>
                                        
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Issue Title</th>
                                        <th>Description</th>
                                        <th>Labels</th>
                                        <th>Author</th>
                                        <!-- <th>Action</th> -->
                                        
                                    </tr>
                                </tfoot>
                                <tbody>
                                        <% issues.forEach(issue=>{ %>
                                        <tr>
                                            <td><%= issue?.issue_title %></td>
                                            <td><%= issue?.issue_desc %></td>
                                            <td><%=  issue?.issue_label %> </td>
                                            <td><%=  issue?.issue_author %> </td>
                                            <!-- <td> -->
                                                <!-- <a href="/projects/view?proj_id= project._id" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                                                <a href="/projects/edit" class="btn btn-warning"><i class="fas fa-pen"></i></a> -->
                                                <!-- <a href="/projects/delete" class="btn btn-danger"><i class="fas fa-trash"></i></a> -->
                                            <!-- </td> -->
                                        </tr>
                                        <% }) %>
                                   

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

  <!-- Modal -->
  <div class="modal fade" id="addIssueModal" tabindex="-1" aria-labelledby="addIssueModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addIssueModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/issue/addissue" method="post">
            <div class="modal-body">
                
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="hidden" name = "proj_id" value="<%= result[0]?._id%>">
                        <input type="text" required name = "issue_title" class="form-control" id="title">
                    </div>
                    <div class="form-group">
                        <label for="desc">Description</label>
                        <textarea name = "issue_desc" class="form-control" id="desc" rows="3" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="issue_label">Label</label>
                        <input list="labelList" name="issue_label" class="form-control" id="issue_label" required>
                    </div>
                    <div class="form-group">
                        <label for="Author">Author</label>
                        <input type="text" class="form-control" name = "issue_author" id="Author" required>
                    </div>
                
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
            </div>  
        </form>
      </div>
    </div>
  </div>